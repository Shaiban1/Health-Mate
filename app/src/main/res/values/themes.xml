<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthMate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="LoginTextInput">

        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/pitch_dark_grey</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="LoginButton">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonsWithOffSide">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="SignUpText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Define OtpBoxStyle -->
    <style name="OtpBoxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="HintTextAppearance">
        <item name="android:textColor">@color/dark_grey</item> <!-- Customize as needed -->
        <item name="android:textSize">14sp</item> <!-- Customize as needed -->
        <item name="android:fontFamily">@font/rb_regular</item> <!-- Customize as needed -->
    </style>



    <style name="Theme.HealthMate" parent="Base.Theme.HealthMate" />
</resources>