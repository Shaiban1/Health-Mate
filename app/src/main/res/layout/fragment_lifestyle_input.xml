<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_color_light"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/lifestyle_textvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Lifestyle"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/lifestyle_textvw"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_radio_button_selector"
                    android:button="@android:color/transparent"
                    android:padding="16dp"
                    android:text="Active"
                    android:textAlignment="center"
                    android:textColor="@color/radio_button_text_color"
                    android:textSize="16sp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_radio_button_selector"
                    android:button="@android:color/transparent"
                    android:padding="16dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:text="Inactive"
                    android:textColor="@color/radio_button_text_color"
                    android:textSize="16sp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_radio_button_selector"
                    android:button="@android:color/transparent"
                    android:padding="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Neutral"
                    android:textAlignment="center"
                    android:textColor="@color/radio_button_text_color"
                    android:textSize="16sp"/>


            </RadioGroup>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
