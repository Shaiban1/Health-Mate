<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/logo_color_light"
    android:padding="16dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <!-- CircleImageView for profile image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user"
        android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/fab_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@id/profile_image"
            android:layout_alignBottom="@id/profile_image"
            android:layout_marginEnd="-11dp"
            android:layout_marginBottom="2dp"
            app:maxImageSize="24dp"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/baseline_photo_camera_24"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your full name"
            android:textSize="20sp"
            android:fontFamily="@font/robot_bold"

            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>







    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:cardCornerRadius="20dp"

        android:layout_marginTop="30dp"
        android:layout_gravity="center_vertical">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:layout_margin="10dp"
                android:background="@drawable/phone_rounded_editext"
                android:padding="16dp"
                android:inputType="textPersonName"/>


            <EditText
                android:id="@+id/MiddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Surname / Middle Name"
                android:layout_margin="10dp"
                android:background="@drawable/phone_rounded_editext"
                android:padding="16dp"
                android:inputType="textPersonName"/>



            <EditText
                android:id="@+id/LastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:layout_margin="10dp"
                android:background="@drawable/phone_rounded_editext"
                android:padding="16dp"
                android:inputType="textPersonName"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
