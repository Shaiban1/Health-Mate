<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:minWidth="300dp"
    android:background="@drawable/dialog_background">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reminder Name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"> <!-- OutlinedBox style -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reminder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pills Count"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"> <!-- OutlinedBox style -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pills_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/daily_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:columnCount="5"> <!-- Padding for better spacing -->

        <CheckBox
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon" />
        <CheckBox
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue" />
        <CheckBox
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed" />
        <CheckBox
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu" />
        <CheckBox
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri" />
        <CheckBox
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat" />
        <CheckBox
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:paddingTop="16dp"> <!-- Padding for better spacing -->

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/rounded_button_with_shadow"
            style="@style/LoginButton"
            android:layout_marginEnd="8dp"/> <!-- Spacing between buttons -->

        <Button
            android:id="@+id/cancel_btn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:elevation="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_button_with_shadow"
            android:textColor="@android:color/darker_gray"
            style="@style/ButtonsWithOffSide"

            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
