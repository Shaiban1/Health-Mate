<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:elevation="3dp"
        app:civ_border="false"
        android:layout_height="60dp"
        android:src="@drawable/user"
        android:layout_marginTop="20sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/profile_image"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/username_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_display_name"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/time_of_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Day_Time"
            android:textSize="24sp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/username_main"
            android:layout_marginTop="7dp" />




        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="50dp"
            android:id="@+id/lottie_day_animation"
            android:layout_height="50dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="120dp"
            app:lottie_fileName="morning_animation.json"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"
            />


    </RelativeLayout>


    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent" />

</RelativeLayout>
