<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/grey_200">

    <!-- Lottie Animation View -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/otp_verify_anim"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginBottom="16dp"/>

    <!-- OTP Input Boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/otpBox1"
            style="@style/OtpBoxStyle" />

        <EditText
            android:id="@+id/otpBox2"
            style="@style/OtpBoxStyle" />

        <EditText
            android:id="@+id/otpBox3"
            style="@style/OtpBoxStyle" />

        <EditText
            android:id="@+id/otpBox4"
            style="@style/OtpBoxStyle" />

        <EditText
            android:id="@+id/otpBox5"
            style="@style/OtpBoxStyle" />

        <EditText
            android:id="@+id/otpBox6"
            style="@style/OtpBoxStyle" />

    </LinearLayout>

    <!-- Message TextView -->
    <TextView
        android:id="@+id/otpMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP sent to your number"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Auto Fill OTP TextView -->


    <!-- Verify OTP Button -->
    <Button
        android:id="@+id/verifyOtpButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_with_shadow"
        android:backgroundTint="@color/colorPrimary"
        style="@style/LoginButton"
        android:layout_marginTop="16dp"/>

</LinearLayout>
